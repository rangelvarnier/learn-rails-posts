<% @posts.each do |post| %>
<div class="row">
    <div class="photo col-2">
        <%= link_to post do %>
        <%= image_tag post.photo.url(:thumb) %>
        <% end %>  
    </div>
    <div class="title col-6">
        <%= post.title %>
        <div class="row">
            <%= link_to 'Editar', edit_post_path(post) %> 
            <%= link_to 'Apagar', post, method: :delete, data: { confirm: 'Voc6e tem certeza?' } %>
        </div>
    </div>
    <div class="user col-4">
        Postado por:  <%= post.user.email %>
    </div>
</div>
<hr>
<% end %>
<div class="row">
 <div class="col-12">
    <div class="d-flex justify-content-center">
        <%= will_paginate @posts %>
    </div>
</div>
</div>
